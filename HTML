        <label for="fontSize">Text Size:</label></div>
      <button onclick="zoomIn()">Zoom In</button>
      <button onclick="zoomOut()">Zoom Out</button>
  
      <script>
          var image = document.getElementById("image");
          var scale = 1;
  
          function zoomIn() {
              scale += 0.1;
              image.style.transform = "scale(" + scale + ")";
          }
  
          function zoomOut() {
              scale -= 0.1;
              image.style.transform = "scale(" + scale + ")";
          }
      </script>
