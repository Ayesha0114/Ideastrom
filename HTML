  <button onclick="changeFont()">Apply Font</button>

  <script>
    function changeFont() {
      // Get the selected font value
      var selectedFont = document.getElementById("fontSelector").value;

      // Apply the selected font to the body
      document.body.style.fontFamily = selectedFont;
    }
  </script>

