  <script>
      // Apply user preferences on page load
      function applyUserPreferences() {
          const fontSize = localStorage.getItem('fontSize') || '16';
          const textColor = localStorage.getItem('textColor') || '#333';
          const linkColor = localStorage.getItem('linkColor') || '#007bff';
          const visitedColor = localStorage.getItem('visitedColor') || '#purple';
          const redLinkColor = localStorage.getItem('redLinkColor') || '#ff0000';

          document.body.style.fontSize =`${fontSize}px`;
          document.body.style.color = textColor;
          document.querySelector('a').style.color = linkColor;
          document.querySelector('a:visited').style.color = visitedColor;
          document.querySelector('.red-link').style.color = redLinkColor;
      }

      // Update preferences on user interaction
      function updateUserPreferences() {
          const fontSize = document.getElementById('fontSize').value;
          const textColor = document.getElementById('textColor').value;
          const linkColor = document.getElementById('linkColor').value;
          const visitedColor = document.getElementById('visitedColor').value;
          const redLinkColor = document.getElementById('redLinkColor').value;

          localStorage.setItem('fontSize', fontSize);
          localStorage.setItem('textColor', textColor);
          localStorage.setItem('linkColor', linkColor);
          localStorage.setItem('visitedColor', visitedColor);
          localStorage.setItem('redLinkColor', redLinkColor);

          applyUserPreferences();
      }

      // Attach event listeners
      document.getElementById('fontSize').addEventListener('input', updateUserPreferences);
      document.getElementById('textColor').addEventListener('input', updateUserPreferences);
      document.getElementById('linkColor').addEventListener('input', updateUserPreferences);
      document.getElementById('visitedColor').addEventListener('input', updateUserPreferences);
      document.getElementById('redLinkColor').addEventListener('input', updateUserPreferences);

      // Apply user preferences on page load
      applyUserPreferences();
  </script>
  <label for="search">Enter a Wikipedia page title:</label>
  <input type="text" id="search" placeholder="Type here">
  <button onclick="searchWikipedia()">Search</button>
  <div id="result"></div>

  <script>
    async function searchWikipedia() {
      const searchTerm = document.getElementById('search').value;
      if (!searchTerm) {
        alert('Please enter a search term');
        return;
      }

      try {
        const response = await fetch(`https://en.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(searchTerm)}`);
        const data = await response.json();

        if (data.extract) {
          document.getElementById('result').innerHTML = `
            <h2>${data.title}</h2>
            <p>${data.extract}</p>
          `;
        } else {
          document.getElementById('result').innerHTML = 'No information found';
        }
      } catch (error) {
        console.error('Error fetching data:', error);
      }
    }
  </script>
 <input type="text" id="searchBar" placeholder="Speak your search term" readonly>
  <button onclick="startListening()">Start Listening</button>
  
  <script>
    const searchBar = document.getElementById("searchBar");

    function startListening() {
      const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
      
      recognition.onresult = function(event) {
        const lastResultIndex = event.results.length - 1;
        const transcript = event.results[lastResultIndex][0].transcript;
        searchBar.value = transcript;
      };

      recognition.start();
    }
  </script>

